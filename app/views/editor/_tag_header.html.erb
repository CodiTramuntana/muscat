<%- extended_help = @editor_profile.get_tag_extended_help(tag_name) %>
<%
	no_add = false
	if @editor_profile.options_config[tag_name] && @editor_profile.options_config[tag_name]["layout"]
		if @editor_profile.options_config[tag_name]["layout"]["hide_add_button"]
			no_add = true
		end
	end

%>
<div style="float:right" class="_lp_tag_header ui-corner-all">
	<div  class="abuttonset abuttonset-multi">
		<%- if !extended_help.empty? %>
			<%= action_button(["", "Help"], "ui-icon-help", "pe_help('#{extended_help}')", "", :right, :all, "", true ) -%>
		<%- end %>
		<%- if MarcConfig.multiples_allowed?(tag_name) -%>
			<input class="pe_ordering" type="hidden" name="<%= tag_name %>-ordering" id="<%= tag_name %>-ordering" value=""/>
			<%- if !no_add -%>
			<%= action_button(["", "Add tag"], "ui-icon-plus", "pe_add_tag('#{render_panel}','#{@editor_profile.id}:#{group}:#{tag_name}')", "pe_button_pad_left", :right, :all, "", true ) -%>
			<%- end -%>	
		<%- end -%>	
		<%= action_button(["", "Delete"], "ui-icon-trash", "pe_delete_tag('#{render_panel}','#{group}','#{tag_name}',#{iterator})", "pe_button_pad_left", :right, :all, "", true ) if !@inline -%>
		<%= action_button(["", "Toggle"], "ui-icon-triangle-1-s", "pe_toggle($('##{render_panel}_tag_#{tag_name}-#{iterator}'))", "pe_button_pad_left", :right, :all, "#{render_panel}_tag_#{tag_name}-#{iterator}_btn", true )	if !@inline -%>
	</div>
</div>
