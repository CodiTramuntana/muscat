<table class="marc_editor_add_tag">
	<tr>
		<td>
			<select onchange="marc_editor_add_tag_from_list($(this));">
				<option value="-" selected="selected">--- Add field ---</option>
				<%- tag_names.each do |tag_name| -%>
					<%
						no_add = false
						if @editor_profile.options_config[tag_name] && @editor_profile.options_config[tag_name]["layout"]
							if @editor_profile.options_config[tag_name]["layout"]["hide_add_button"]
								no_add = true
							end
						end

					%>
					<option id="add_tag_<%= tag_name -%>" value="<%= tag_name -%>" <%= @item.marc.has_tag?(tag_name) || no_add ? " disabled=\"disabled\"".html_safe : "" %>>
						<%= @editor_profile.get_label(tag_name) -%> (<%= tag_name -%>)
					</option>
				<%- end -%>
			</select>
		</td>
	</tr>
</table>
