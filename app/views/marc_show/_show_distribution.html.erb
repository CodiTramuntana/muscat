<%
    b_tag = tag.fetch_first_by_tag(:b)
    c_tag = tag.fetch_first_by_tag(:c)
	
	content = Array.new
	content << b_tag.content if b_tag && b_tag.content
	content << "(#{c_tag.content})" if c_tag && c_tag.content	
-%>
<tr class="row">
	<th>
		<% if (no_label == false) -%>
			<%= @editor_profile.get_label(tag.tag) %>
		<%- end %>
	</th>
	<td>
		<%= content.join(' ') %>
	</td>
</tr>

